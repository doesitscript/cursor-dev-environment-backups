# Memory Keeper Configuration
export MEMORY_KEEPER_AUTO_UPDATE=1
export MEMORY_KEEPER_CHANNEL=workflows
export MCP_DEFAULT_CHANNEL=workflows

# Data Directory Configuration
export DATA_DIR="/Users/a805120/mcp-data/memory-keeper"

# Path Extensions for MCP Tools
export PATH="$HOME/.local/mcp-servers/guardrail:$PATH"

# Guardrails Configuration
export MCP_RULEGUARD_LOG_DIR="/Users/a805120/.mcp/rule-logs"
export RULE_FILES_PATH="/Users/a805120/.mcp/rules"

# Manifest Management
export MANIFESTS_DIR="/Users/a805120/.manifests"
export MCP_SETUP_MANIFEST_PREFIX="mcp_setup_"

# Verification System
export MCP_VERIFY_MAKEFILE="/Users/a805120/.config/workflows/Makefile.mcp-verify"

# Trust Loop Configuration
export TRUST_LOOP_RULES_FILE="/Users/a805120/.config/workflows/cursorrules.d/20_mcp_trust_loop.rules"

# Behavior Validation
export ENFORCE_BEST_BEHAVIOR=1
export REQUIRE_EVIDENCE_FOR_CLAIMS=1
export AWS_READONLY_DEFAULT=1

# Logging Configuration
export MCP_LOG_LEVEL="INFO"
export MCP_AUDIT_LOG="/Users/a805120/.mcp/audit.log"

# Backup Management
export MCP_BACKUP_DIR="/Users/a805120/.cursor/mcp-backups"
export MCP_BACKUP_RETENTION_DAYS=30

# CLI Tools Configuration
export MCP_MEMORY_KEEPER_CLI="mcp-memory-keeper"
export MCP_CHAT_HISTORY_CLI="mcp-chat-history-recorder"

# System Integration
export MCP_INTEGRATION_MODE="enterprise"
export MCP_COMPLIANCE_MODE="strict"

# Performance Optimization
export MCP_CACHE_ENABLED=1
export MCP_CACHE_DIR="/Users/a805120/.mcp/cache"

# Security Configuration
export MCP_SECURITY_MODE="strict"
export MCP_AUDIT_ALL_OPERATIONS=1

# Version Information
export MCP_CONFIG_VERSION="2.0.0"
export MCP_CONFIG_DATE="2025-01-27"
export MCP_CONFIG_STATUS="ACTIVE"